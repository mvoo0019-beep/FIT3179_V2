{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 400,
	"data": {
		"url": "https://raw.githubusercontent.com/mvoo0019-beep/FIT3179_V2/main/data/skin_cancer_age_sex.csv"
	},
	"selection": {
		"Sex_Selection": {
			"type": "multi",
			"fields": [
				"Sex"
			],
			"bind": "legend"
		}
	},
	"mark": "bar",
	"encoding": {
		"x": {
			"field": "Age_Group",
			"type": "nominal",
			"title": "Age Group (years)",
			"axis": {
				"labelAngle": 0
			}
		},
		"y": {
			"field": "Cases",
			"type": "quantitative",
			"title": "Cases",
			"stack": null
		},
		"color": {
			"field": "Sex",
			"type": "nominal",
			"title": "Sex"
		},
		"xOffset": {
			"field": "Sex"
		},
		"opacity": {
			"condition": {
				"selection": "Sex_Selection",
				"value": 0.9
			},
			"value": 0.2
		},
		"tooltip": [
			{
				"field": "Age_Group",
				"title": "Age Group",
				"type": "nominal"
			},
			{
				"field": "Sex",
				"title": "Sex",
				"type": "nominal"
			},
			{
				"field": "Cases",
				"title": "Number of Cases",
				"type": "quantitative"
			}
		]
	}
}